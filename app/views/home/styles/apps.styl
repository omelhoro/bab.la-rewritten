wrong=lightcoral
correct=lightgreen

.question-gallery
  max-width: 600px
  height: 400px
  //border-radius 0px
  //box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3), 0 1px 1px rgba(0, 0, 0, 0.4)
  display inline-block

  .vocab div.flip-container
    top 20%
    position relative
  .vocab div.controls
    button
      width 90px
    top 200px
    left 50%
    position absolute
    text-align center
    transform: translate(-50%, -50%)
  //that is mostly for centering
  .flip-container, .front, .back
    width 100%
    height 100%

  .slide
    padding 25px
    //width 100%

  .dots
    position absolute
    .dot-item
      margin 1px
      cursor pointer
      height 12px
      width 12px
      border-radius 12px
      background transparent
      border-color 1px solid #000000

    .wrong
      background wrong

    .correct
      background correct

    .active
      background #808080y
      border-color #000000

  label
    margin-left 50px


.hangman
  #letter-list li
    display inline
    width 90px
    min-height 90px
    margin 10px
    font-size large
    //border-bottom 2px solid black
li.wrong a
  background-color wrong
li.correct a
  background-color correct

.modal-main-panel
  &.correct
    background-color: correct
  &.false
    background-color: wrong

.memory
  .correct
    transition background-color 0.6s ease 0s
    background-color correct
  .false
    transition background-color 0.6s ease 0s
    background-color wrong
  table
    width 100%
    border-collapse separate
    border-spacing 5px
  td
    border-radius 10px
  .memory-card
    display table-cell
    vertical-align middle
    text-align center
    min-height 150px
    //border 1px solid blue
  .flip-container, .front,.back
    width:100%
  .front
    background-color lightgray
    cursor pointer